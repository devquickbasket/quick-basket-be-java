<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Path and file name -->
    <property name="LOG_PATH" value="/Users/aadam/Documents/projects/logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/quickbasket.log"/>

    <!-- Console output (for IntelliJ/Terminal) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with daily rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily log file -->
            <fileNamePattern>${LOG_PATH}/quickbasket-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep logs for 14 days -->
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- App-specific logger -->
    <logger name="com.quickbasket" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
